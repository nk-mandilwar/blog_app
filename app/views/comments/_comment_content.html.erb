
<div class="comment">
	<div class="image">
		<%= render partial: "shared/user_image", locals: {user: comment.user}%>
	</div>	
	<div class="comment-contents">
		<%= link_to comment.user.username, comment.user %> <%= comment.content %>		
	</div>
	<div style="clear:both"></div>
</div>
		
<div class="comment-reply-delete">
	<span id="like_count<%= comment.id %>">
		<%= render partial: "shared/like_count", locals: {comment: comment} %>
	</span>	
	<% like = Like.find_by(:comment_id => comment.id, :user_id => current_user.id) %>
	<% if !like  %>
		<span id="like<%=comment.id%>">
			<%= link_to "Like", comment_likes_path(comment), method: :post, remote: true %>	
		</span>
	<% else %>
		<span id="unlike<%=comment.id%>">
			<%= link_to "Unlike", comment_like_path(comment, like), method: :delete, remote: true %>		
		</span>
	<% end %>

	<span>
		<%= link_to "Reply", new_post_comment_path(@post, comment_id: comment.id,), remote: true %>	
	</span> 
	<span class="time-ago">
		<%= " - #{time_ago_in_words(comment.created_at)}" %>	
	</span>
	
	<span class="edit-delete-comment">
		<% if comment.user == current_user %>		
			<%= link_to  "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, 
																edit_post_comment_path(@post, comment), remote: true %>
		<% end %>
		<% if comment.user == current_user || @post.user == current_user %>															
			<%= link_to "<i class=\"glyphicon glyphicon-trash\"></i>".html_safe, [@post, comment], 
														method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
		<% end %>
	</span>	
	
	<% if (comment.children.length > 0) %>
		<span id="reply_<%= "#{comment.id}"%>", class="reply"> Replies </span>
		<span id="hide_<%= "#{comment.id}"%>", class="hide1"> Hide </span>
	<% end %>
</div>
