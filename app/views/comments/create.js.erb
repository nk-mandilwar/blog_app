<% if @comment.parent_id != nil %>
	$('#comment-content<%= @comment.parent_id %>').val('');
	$("#display-comment<%= @comment.parent_id %>").append("<%= escape_javascript(render partial: 'comments/comment', locals: {comment: @comment})%>");
	$('#reply_div<%= @comment.parent_id %>').hide();
<% else %>
	$('.comment-content').val('');
	$("#base-comment").append("<%= escape_javascript(render partial: 'comments/comment', locals: {comment: @comment})%>");
<% end %>		
