<h1 id="header-id">Sent Request</h1>
<table class="table table-hover">
  <thead>
    <th colspan="10">Username</th>   
  </thead>
  <tbody>
    <% @outgoing.each do |user| %>
      <tr id="sent_cancel_request<%= user.id %>">
        <td colspan="8"> <%= render partial: "shared/user_image", locals: {user: user}%>                                    <%= link_to "  #{user.username}", user %></td>
        <td colspan="10"><%= link_to "Cancel request", friend_request_path(user),
                                                       method: :delete, remote: true %> </td>
      </tr>
    <% end %>
  </tbody>
</table>