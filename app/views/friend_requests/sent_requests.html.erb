<h1 id="header-id">Sent Request</h1>
<%= render 'layouts/subscribe' %>
<table class="table table-hover">
  <thead>
    <th colspan="10">Username</th>   
  </thead>
  <tbody>
    <% @outgoing.each do |user| %>
      <tr>
        <td colspan="8"> <%= render partial: "shared/user_image", locals: {user: user}%></td>
        <td colspan="10"><%= link_to "Cancel request", friend_request_path(user), method: :delete, 
                        data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>