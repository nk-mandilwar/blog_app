<h1 id='header_id'>Sign Up</h1>
<div class="row" >
  <div class="col-md-8" >
   <%= form_for(:user, url: url_for(controller: "users", action: "create", 
														            method: "post")) do |f| %>

      <%= f.hidden_field(:uid, :value => session["devise.user_attributes"]["uid"]) %>
      <%= f.hidden_field(:provider, :value => session["devise.user_attributes"]["provider"]) %>    

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>
        
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :twitter_profile %>
        <%= f.text_field :twitter_profile, autofocus: true, class: "form-control" %>
      </div>

      <br>
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>