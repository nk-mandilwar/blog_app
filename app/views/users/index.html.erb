<h1 id="header-id">Listing All Users</h1>
<table class="table table-hover">
  <thead>
    <th colspan="10">Username</th> 
    <th colspan="10">Name</th>   
    <th colspan="10">City</th> 
    <th colspan="10">Facebook Profile Link</th>    
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td colspan="10"><%= user.username %></td>
        <td colspan="10"><%= user.name %></td>
        <td colspan="10"><%= user.city %></td>
        <td colspan="10"><%= link_to user.facebook_profile, user.facebook_profile %></td>
      </tr>
    <% end %>
  </tbody>
</table>