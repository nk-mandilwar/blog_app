<h1 id="header-id">My Friends</h1>

<table class="table table-hover">
  <thead>
  	<th>Friends</th>
  </thead>
	<% @friends.each do |friend| %>
		<tr>
			<td>
				<%= User.find_by(:id => friend.id).name %>
			</td>
			<td>
				<%= link_to "Unfriend", friend_path(friend), :method => :delete %><span class="glyphicon glyphicon-user">
			</td>
		</tr>
	<% end %>
</table>