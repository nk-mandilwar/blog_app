<h1 id="header-id">My Friends</h1>
<%= render 'layouts/subscribe' %>

<table class="table table-hover">
  <thead>
  	<th>Friends</th>
  </thead>
	<% @friends.each do |user| %>
		<tr>
			<td colspan="8"> <%= render partial: "shared/user_image", locals: {user: user}%></td>
			<td colspan="8">
				<%= link_to "Unfriend", friend_path(user), :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>