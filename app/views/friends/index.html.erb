<h1 id="header_id">My Friends</h1>

<table class="table table-hover">
  <thead>
  	<th>Friends</th>
  </thead>
	<% @friends.each do |user| %>
		<tr id="friend_list_<%= user.id %>">
			<td colspan="8"> <%= render partial: "shared/user_image", locals: {user: user}%>																													<%= link_to "  #{user.username}", user %></td>
			<td colspan="8">
				<%= link_to "Unfriend", friend_path(user), method: :delete, remote: true %>
			</td>
		</tr>
	<% end %>
</table>
