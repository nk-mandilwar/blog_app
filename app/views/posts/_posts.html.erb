<div id="posts" >
  <% if !@posts.present? %>
    <p><b>There are no posts with name like: <%= params[:search] %>.</b></p>
  <% else %>  
    <%= paginate @posts %>
      <table class="table table-hover">
        <tbody>
          <% @posts.each do |post| %>
            <div class="post-title-wrap"> <%= link_to post.title, post %> </div>
            <div class="show-less-content">
              <div id="post-content">
                <%= post.content.html_safe %>
              </div>
          </div>
          <%= render partial: "shared/post", locals: {post: post} %> 
          <br><br>
          <% end %>
        </tbody>
      </table>
    <%= paginate @posts %>
  <% end %>  
</div>
