<div id="posts" >
  <% if !@posts.present? %>
    <p><b>There are no posts with name like: <%= params[:search] %>.</b></p>
  <% else %>  
    <%= paginate @posts %>
      <table class="table table-hover">
        <tbody>
          <% @posts.each do |post| %>
            <div class="post">
              <div class="post-title-wrap"> <%= link_to post.title, post %> </div>
              <div class="show-less-content">
                <div id="post_content">
                  <%= post.content.html_safe %>
                </div>
              </div>
              <%= render partial: "shared/post_manipulation", locals: {post: post} %>
            </div>   
            <br><br>
          <% end %>
        </tbody>
      </table>
    <%= paginate @posts %>
  <% end %>  
</div>
