<div id="post-content">
  <strong> <%= @post.content %> </strong>
  <div>
    <% if current_user == @post.user %>
      <%= link_to 'Edit', edit_post_path(@post) %> -
    <% end %>
    <span class="time-ago"><%= time_ago_in_words(@post.created_at) %></span>
  </div >
